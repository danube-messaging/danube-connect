# Danube Configuration
DANUBE_SERVICE_URL=http://localhost:6650
CONNECTOR_NAME=qdrant-sink-example

# Qdrant Configuration (Required)
QDRANT_URL=http://localhost:6334
QDRANT_COLLECTION=vectors

# Vector dimension - Used for:
# 1. Early validation (catches dimension mismatches before sending to Qdrant)
# 2. Auto-creating collections with correct schema
QDRANT_VECTOR_DIMENSION=384

# Qdrant Configuration (Optional)
QDRANT_API_KEY=

# Distance metric - Used only when auto-creating collections
QDRANT_DISTANCE=Cosine
QDRANT_BATCH_SIZE=50
QDRANT_BATCH_TIMEOUT_MS=1000
QDRANT_AUTO_CREATE_COLLECTION=true
QDRANT_INCLUDE_DANUBE_METADATA=true
QDRANT_TIMEOUT_SECS=30

# Logging
RUST_LOG=info,danube_sink_qdrant=debug

# Configuration File (optional - use instead of env vars)
# CONFIG_FILE=/app/config.toml
