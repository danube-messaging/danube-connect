# Danube Connect Configuration
DANUBE_SERVICE_URL=http://localhost:6650
CONNECTOR_NAME=mqtt-source-1

# MQTT Broker Configuration
MQTT_BROKER_HOST=localhost
MQTT_BROKER_PORT=1883
MQTT_CLIENT_ID=danube-mqtt-connector-1

# Authentication (optional)
# MQTT_USERNAME=your-username
# MQTT_PASSWORD=your-password

# TLS/SSL (optional)
# MQTT_USE_TLS=true

# Topic Configuration
# Comma-separated list of MQTT topics to subscribe
# Supports wildcards: + (single level), # (multi-level)
MQTT_TOPICS=sensors/#,devices/+/telemetry

# Target Danube topic (if not set, uses /mqtt/<mqtt-topic>)
MQTT_DANUBE_TOPIC=/iot/data

# MQTT QoS Level (0, 1, or 2)
MQTT_QOS=1

# MQTT Options
MQTT_KEEP_ALIVE_SECS=60
MQTT_CLEAN_SESSION=true
MQTT_INCLUDE_METADATA=true
MQTT_MAX_PACKET_SIZE=10485760

# Danube Options
RELIABLE_DISPATCH=true
POLL_INTERVAL_MS=100

# Logging
LOG_LEVEL=info
RUST_LOG=info,danube_source_mqtt=debug
